# AI Innovators Environment Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: OpenAI API Key for fallback/alternative models
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Serper API Key for web search functionality
# Get your key at https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# Optional: Google Gemini API Key for Designer Agent
# Get your key at https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Model Configuration
PRIMARY_MODEL=claude-sonnet-4
SECONDARY_MODEL=claude-haiku-4
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview

# Pipeline Configuration
MAX_TURNS_PER_STAGE=5
STAGE_TIMEOUT_MINUTES=30

# Cost Control
MAX_BUDGET_PER_EXPERIMENT=10.00

# Logging
LOG_LEVEL=INFO
LOG_FILE=startup_company.log

# Experiment Storage
EXPERIMENTS_DIR=./experiments
